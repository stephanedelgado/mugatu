<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url(<%= image_path 'banner.jpeg' %>);">
  <div class="banner-content container">
    <div class="row">
      <div class="col-sm-7 col-xs-12"><h2 class="text-left">Find a model nearby</h2></div>
      <div class="col-sm-5 col-xs-12 search-wrapper">
        <form action="<%= artists_path %>" autocomplete="on">
          <input id="search" name="search" type="text" placeholder="your city" autofocus>
          <button id="search_submit">
            <i class="fa fa-search"></i>
          </button>
        </form>
      </div>
    </div>
  </div>
</div>


<div class="wrapper">
  <div class="container text-center">
    <div class="row">
      <% @artists.each do |artist| %>
        <div class="col-xs-12 col-sm-6 col-md-4">
            <div class="card">
              <div class="card-image">
                <% if artist.photos.any? %>
                <%= cl_image_tag artist.photos[0].path%>
                <% end %>
              </div>
              <div class="card-name">
                <h2><%= artist.first_name %> <%= artist.last_name %></h2>
                <p>$<%= artist.daily_rate %></p>
                <p class="small">LOCATION</p>
              </div>
              <%= link_to "", artist_path(artist), class: "card-link" %>
            </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
